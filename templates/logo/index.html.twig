{% extends 'base.html.twig' %}

{% block title %}Logo index{% endblock %}

{% block body %}
    <h1>Logo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for logo in logos %}
            <tr>
                <td>{{ logo.id }}</td>
                <td>{{ logo.nom }}</td>
                <td>{{ logo.date ? logo.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_logo_show', {'id': logo.id}) }}">show</a>
                    <a href="{{ path('app_logo_edit', {'id': logo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_logo_new') }}">Create new</a>
{% endblock %}
