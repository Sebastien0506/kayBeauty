{% extends 'base.html.twig' %}

{% block h1 %}Gestion des Produits{% endblock %}

{% block body %}

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Titre</th>
      <th scope="col">Prix(â‚¬)</th>
      <th scope="col">Description</th>
      <th scope="col">Categorie</th>
      <th scope="col">Modifier</th>
      <th scope="col">Supprimer</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
  {% for produit in produits %}
    <tr>
     
      <td>{{produit.id}}</td>
      <td>{{produit.titre}}</td>
      <td>{{produit.prix}}</td>
      <td>
        {% if produit.description %}
           {{ produit.description|capitalize }}
         {% else %}
           <span class="fst-italic text-danger">Non Renseigner</span>
         {% endif %}

      </td>
      <td>
         {% for categorie in produit.categorie %}
             {{categorie.nom }}
         {% endfor %}

      </td>
      <td>
         <a href="{{ path('produit_modifier', {'id' : produit.id}) }}">Modifier</a>

      </td>
      <td>
        <a href="{{ path('produit_supprimer', {'id' : produit.id}) }}">Supprimer</a>
      </td>
    </tr>
   {% endfor %}
  </tbody>
</table>




{% endblock %}